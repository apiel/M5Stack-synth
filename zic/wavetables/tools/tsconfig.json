{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "lib": ["es2019"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/@types/*", "src/typings/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
